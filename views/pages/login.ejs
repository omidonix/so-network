<%- include('../landing_header') -%>
<div class="login-reg-bg show">
    <div class="log-reg-area reg">
        <h2 class="log-title">Login</h2>
        <br>
        <% if(hasError){ %>
            <div class="alert alert-danger" role="alert">
                <ul>
                    <% err.forEach(function(item){ %>
                        <li><%= item %></li>
                    <% }); %>
                </ul>
            </div>
        <% } %>
        <br>
        <form method="post" action="/users/login" id="login-form">
            <div class="form-group">	
              <input type="text" id="input" name="username" value="<%= typeof params!== 'undefined' && params.username ? params.username : '' %>"/>
              <label class="control-label" for="input">Username</label><i class="mtrl-select"></i>
            </div>
            <div class="form-group">	
              <input type="password" name="password"/>
              <label class="control-label" for="input">Password</label><i class="mtrl-select"></i>
            </div>
            <div class="checkbox">
              <label>
                <input type="checkbox" checked="checked"/><i class="check-box"></i>Always Remember Me.
            </label>
        </div>
            <a href="register" title="" class="forgot-pwd">Register</a>
            <div class="submit-btns">
                <button class="mtr-btn " type="submit"><span>Login</span></button>
            </div>
        </form>
    </div>
<%- include('../landing_footer') -%>